@page
@model IndexModel
@{
    ViewData["Title"] = "ChalkBoard";
}

<h2>Login</h2>

<div class="min-vh-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-sm p-4" style="width: 420px; border-radius: 16px;">
        <h2 class="mb-3">Login</h2>

        <form method="post">
            <div class="mb-3">
                <input class="form-control" type="text" asp-for="Username" placeholder="Username" />
            </div>

            <div class="mb-3">
                <input class="form-control" type="password" asp-for="Password" placeholder="Password" />
            </div>

            <button class="btn btn-dark w-100" type="submit">Login</button>

            <div class="text-center mt-3">
                <a asp-page="/Register">Register</a>
            </div>
        </form>
    </div>
</div>